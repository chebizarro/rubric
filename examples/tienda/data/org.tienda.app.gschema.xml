<?xml version="1.0" encoding="UTF-8"?>
<schemalist>

	<schema path="/org/tienda/app/" id="org.tienda.app">
		<child name="modules" schema="RubricModularityModuleCatalog" />
	</schema>

	<schema id="RubricModularityModuleCatalog">
		<key name="active-modules" type="as">
			<default>["users","dashboard","sales","stock"]</default>
			<summary>Active modules</summary>
			<description>List of active modules</description>
		</key>
		<key name="search-paths" type="as">
			<default>["",""]</default>
			<summary>Module Search Paths</summary>
			<description>Paths to search for loadable Modules</description>
		</key>
	</schema>

	<schema id="RubricGtkRegionsViewRegistry">
		<key name="views" type="a{sas}">
			<default>{"content":["TiendaModulesUsersLoginView"]}</default>
			<summary>Active views</summary>
			<description>Map of the active view types</description>
		</key>

	</schema>

	<schema id="RubricGtkShell">
		<key type="s" name="title">
			<default>"Tienda App"</default>
		</key>
	</schema>

	<schema id="RubricGtkShell.shell" extends="RubricGtkShell" >
	</schema>


</schemalist>
